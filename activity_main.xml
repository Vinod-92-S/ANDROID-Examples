<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c0c0c" >

    <Button
        android:id="@+id/Btn9_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btn8_id"
        android:layout_alignBottom="@+id/Btn8_id"
        android:layout_toRightOf="@+id/Btn8_id"
        android:text="9"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn5_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btn4_id"
        android:layout_alignBottom="@+id/Btn4_id"
        android:layout_toRightOf="@+id/Btn1_id"
        android:text="5"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn6_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btn5_id"
        android:layout_alignBottom="@+id/Btn5_id"
        android:layout_toRightOf="@+id/Btn5_id"
        android:text="6"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/result_id"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/Btndivide_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ada99c"
        android:ems="10"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/Btnplus_id"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Btndot_id"
        android:layout_alignLeft="@+id/Btndivide_id"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Btn6_id"
        android:text="+"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn8_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btn7_id"
        android:layout_alignBottom="@+id/Btn7_id"
        android:layout_toLeftOf="@+id/Btn6_id"
        android:text="8"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btnminus_id"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btn9_id"
        android:layout_alignBottom="@+id/Btn9_id"
        android:layout_alignLeft="@+id/Btnplus_id"
        android:layout_alignParentRight="true"
        android:text="-"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btndivide_id"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btnclear_id"
        android:layout_alignBottom="@+id/Btnclear_id"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/Btnmulti_id"
        android:text="/"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btnmulti_id"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btnclear_id"
        android:layout_alignBottom="@+id/Btnclear_id"
        android:layout_alignRight="@+id/Btn9_id"
        android:layout_toRightOf="@+id/Btnclear_id"
        android:text="*"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btndot_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/Btn0_id"
        android:layout_toRightOf="@+id/Btn0_id"
        android:text="."
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/Btnequal_id"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/Btn3_id"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Btndot_id"
        android:text="="
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn3_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Btndot_id"
        android:layout_toRightOf="@+id/Btn2_id"
        android:text="3"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn0_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/Btn2_id"
        android:text="0"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn2_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Btndot_id"
        android:layout_toLeftOf="@+id/Btn6_id"
        android:text="2"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn1_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/Btn2_id"
        android:layout_alignBottom="@+id/Btn2_id"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn4_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Btn2_id"
        android:layout_toLeftOf="@+id/Btn5_id"
        android:text="4"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btn7_id"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Btn4_id"
        android:layout_alignParentLeft="true"
        android:text="7"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/Btnclear_id"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_above="@+id/Btn8_id"
        android:layout_alignParentLeft="true"
        android:text="clear"
        android:textColor="#ffffff" />

</RelativeLayout>